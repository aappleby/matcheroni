# Matcheroni C lexer demo
from hancho import *

rules = load("../../config/rules.hancho")

c_lexer_lib = rules.c_library(
  ["CLexer.cpp", "CToken.cpp"],
  "c_lexer.a",
)

rules.c_test(
  "c_lexer_test.cpp",
  "c_lexer_test",
  libs = c_lexer_lib,
  quiet = True,
)

rules.c_binary(
  "c_lexer_benchmark.cpp",
  "c_lexer_benchmark",
  libs = c_lexer_lib,
)
